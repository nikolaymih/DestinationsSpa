{{> header}}
<section id="viewEditdestination">
            <h2>Edit existing destination</h2>
            <form id="formAdddestination" action="#/edited-destination/{{destination.id}}" method="POST">
                <label for="destination">Destination name:</label>
                <input type="text" id="destination" name="destination" value="{{destination.destination}}" required>
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value="{{destination.city}}" required>
                <label for="duration">Duration:</label>
                <input type="number" id="duration" name="duration" value="{{destination.duration}}" required>
                <label for="departureDate">Departure Date:</label>
                <input type="date" id="departureDate" name="departureDate" value="{{destination.departureDate}}" required>
                <label for="imgUrl">Image:</label>
                <input type="text" id="imgUrl" name="imgUrl"
                    value="{{destination.imgUrl}}" required>

                <input type="submit" class="create" value="Edit">
            </form>
        </section>
{{> footer}}